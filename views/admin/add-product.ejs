<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Add Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css">
    <link rel="stylesheet" href="/styles/adminStyles/dashboard.css">
    <link rel="stylesheet" href="/styles/adminStyles/users.css">
    <style>
        .form-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            display: flex;
            flex-direction: column;
        }
        .form-control, .form-select {
            background-color: #1F2A44;
            color: #fff;
            border-color: #2A3555;
        }
        .form-control:focus, .form-select:focus {
            background-color: #1F2A44;
            color: #fff;
            border-color: #007bff;
            box-shadow: none;
        }
        .btn-primary {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 5px 15px;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
        .alert {
            background-color: #2A3555;
            color: #fff;
            border: none;
        }
        .product-image {
            max-width: 100px;
            margin: 5px;
            border: 1px solid #2A3555;
        }
        .image-preview {
            max-width: 200px;
            margin: 10px 0;
            display: block; /* Ensure the image takes its own line */
        }
        .cropper-container {
            max-width: 100%;
            max-height: 400px;
            margin-bottom: 40px; /* Increased spacing between each image-crop pair */
            display: flex;
            flex-direction: column; /* Stack the image and button vertically */
            align-items: flex-start; /* Align items to the left */
            gap: 10px; /* Add spacing between the image and the crop button */
        }
        .image-section {
            margin-bottom: 100px; /* Keep this to ensure no overlap with the submit button */
            min-height: 200px;
        }
        .submit-section {
            margin-top: 50px;
            display: flex;
            justify-content: flex-start;
            position: relative;
            z-index: 1;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <%- include('../partials/admin/sidebar') %>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="navbar">
                <%- include('../partials/admin/navbar') %>
            </div>
            
            <div class="container-fluid custom-container">
                <div class="form-container">
                    <h2 class="text-white mb-4">Add New Product</h2>
                    <% if (message) { %>
                        <div class="alert alert-danger"><%= message %></div>
                    <% } %>
                    <form id="addProductForm" action="/admin/products/add" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name" class="form-label text-white">Product Name</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label text-white">Description</label>
                            <textarea class="form-control" id="description" name="description" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="brand" class="form-label text-white">Brand</label>
                            <input type="text" class="form-control" id="brand" name="brand" required>
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label text-white">Price</label>
                            <input type="number" class="form-control" id="price" name="price" min="0" step="0.01" required>
                        </div>
                        <div class="mb-3">
                            <label for="stock" class="form-label text-white">Stock</label>
                            <input type="number" class="form-control" id="stock" name="stock" min="0" required>
                        </div>
                        <div class="mb-3">
                            <label for="category" class="form-label text-white">Category</label>
                            <select class="form-select" id="category" name="category" required>
                                <% categories.forEach(category => { %>
                                    <option value="<%= category.brand %>"><%= category.brand %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="mb-3 image-section">
                            <label for="images" class="form-label text-white">Product Images (Minimum 3)</label>
                            <input type="file" class="form-control" id="images" name="images" multiple accept="image/*">
                            <div id="imagePreview" class="mt-3"></div>
                        </div>
                        <div class="submit-section">
                            <button type="submit" class="btn btn-primary">Add Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
    <script>
        const imageInput = document.getElementById('images');
        const imagePreview = document.getElementById('imagePreview');
        const form = document.getElementById('addProductForm'); // Use 'editProductForm' in edit-product.ejs
        let croppers = [];
        let croppedBlobs = [];
    
        imageInput.addEventListener('change', (event) => {
            const files = event.target.files;
            imagePreview.innerHTML = ''; // Clear previous previews
            croppers = [];
            croppedBlobs = [];
    
            // Adjust the minimum image check based on the file (add or edit)
            const minImages = form.id === 'addProductForm' ? 3 : 0; // 3 for add, 0 for edit (optional)
            if (files.length > 0 && files.length < 3 && form.id === 'addProductForm') {
                alert('Please upload at least 3 images.');
                imageInput.value = ''; // Clear the input
                return;
            }
    
            Array.from(files).forEach((file, index) => {
                const reader = new FileReader();
                reader.onload = (e) => {
                    const imgContainer = document.createElement('div');
                    imgContainer.className = 'cropper-container';
    
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.className = 'image-preview';
                    img.id = `image-${index}`;
                    img.style.width = '100%'; // Ensure the image takes the full width of the container
                    imgContainer.appendChild(img);
    
                    const cropButton = document.createElement('button');
                    cropButton.type = 'button';
                    cropButton.className = 'btn btn-primary';
                    cropButton.textContent = 'Crop Image';
                    cropButton.style.marginTop = '10px'; // Add spacing between the image and the button
                    cropButton.style.alignSelf = 'flex-start'; // Align the button to the left
                    cropButton.addEventListener('click', () => cropImage(index));
                    imgContainer.appendChild(cropButton);
    
                    imagePreview.appendChild(imgContainer);
    
                    const cropper = new Cropper(img, {
                        aspectRatio: 1,
                        viewMode: 1,
                        autoCropArea: 0.8,
                        responsive: true,
                    });
                    croppers[index] = cropper;
                };
                reader.readAsDataURL(file);
            });
        });
    
        function cropImage(index) {
            const cropper = croppers[index];
            if (cropper) {
                cropper.getCroppedCanvas({
                    width: 800,
                    height: 800,
                }).toBlob((blob) => {
                    croppedBlobs[index] = blob;
                    alert('Image cropped successfully!');
                }, 'image/jpeg');
            }
        }
    
        form.addEventListener('submit', (event) => {
            if (imageInput.files.length > 0) {
                if (croppedBlobs.length !== imageInput.files.length || croppedBlobs.some(blob => !blob)) {
                    event.preventDefault();
                    alert('Please crop all images before submitting.');
                    return;
                }
    
                const dataTransfer = new DataTransfer();
                croppedBlobs.forEach((blob, index) => {
                    const file = new File([blob], `cropped-${index}.jpg`, { type: 'image/jpeg' });
                    dataTransfer.items.add(file);
                });
                imageInput.files = dataTransfer.files;
            }
        });
    </script>
</body>
</html>