<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Add Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="/styles/adminStyles/dashboard.css">
    <link rel="stylesheet" href="/styles/adminStyles/users.css">
    <style>
        .form-control, .form-select {
            background-color: #1F2A44;
            color: #fff;
            border-color: #2A3555;
        }
        .form-control:focus, .form-select:focus {
            background-color: #1F2A44;
            color: #fff;
            border-color: #007bff;
            box-shadow: none;
        }
        .btn-primary {
            background-color: #007bff;
            color: white;
            border:

 none;
            padding: 5px 15px;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
        .alert {
            background-color: #2A3555;
            color: #fff;
            border: none;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <%- include('../partials/admin/sidebar') %>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="navbar">
                <%- include('../partials/admin/navbar') %>
            </div>
            
            <div class="container-fluid custom-container">
                <h2 class="text-white mb-4">Add New Product</h2>
                <% if (message) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>
                <% if (messageSuccess) { %>
                    <div class="alert alert-success"><%= messageSuccess %></div>
                <% } %>
                <form action="/admin/products/add" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="name" class="form-label text-white">Product Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label text-white">Description</label>
                        <textarea class="form-control" id="description" name="description" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="brand" class="form-label text-white">Brand</label>
                        <input type="text" class="form-control" id="brand" name="brand" required>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label text-white">Price</label>
                        <input type="number" class="form-control" id="price" name="price" min="0" step="0.01" required>
                    </div>
                    <div class="mb-3">
                        <label for="stockCount" class="form-label text-white">Stock Count</label>
                        <input type="number" class="form-control" id="stockCount" name="stockCount" min="0" required>
                    </div>
                    <div class="mb-3">
                        <label for="status" class="form-label text-white">Status</label>
                        <select class="form-select" id="status" name="status" required>
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label text-white">Category</label>
                        <select class="form-select" id="category" name="category" required>
                            <% categories.forEach(category => { %>
                                <option value="<%= category.brand %>"><%= category.brand %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="images" class="form-label text-white">Product Images (Minimum 3)</label>
                        <input type="file" class="form-control" id="images" name="images" multiple required>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Product</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>