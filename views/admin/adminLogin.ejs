<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Sneakify</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/adminStyles/style.css">
</head>
<body>

    <div class="login-container">
        <!-- Sneaker Image -->
        <img src="/images/ecommerce_logo-removebg.png" alt="Sneakify Logo" class="sneaker-img">

        <!-- Login Form -->
        <div class="login-form">
            <h2 class="text-center">Login</h2>
            <form method="post" id="adminLoginForm" action="/admin/verifyLogin">
                <div class="mb-3">
                    <label for="email" name="email"  class="form-label">Email</label>
                    <input type="email" name="email"   class="form-control" id="email" placeholder="Enter your email">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" id="password" placeholder="Enter your password">
                </div>
                <br>
                <button type="submit" class="btn btn-purple w-100">Log in</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const adminLoginForm = document.getElementById("adminLoginForm");
            const email = document.getElementById("email");
            const password = document.getElementById("password");
            const adminEmail = "admin@gmail.com";
            const adminPassword = "12345";

            function validateLogin() {
                if (email.value.trim() === "" || password.value.trim() === "") {
                    alert("Please enter both email and password!");
                    return false;
                }
                if (email.value.trim() !== adminEmail || password.value.trim() !== adminPassword) {
                    alert("Invalid email or password!");
                    return false;
                }
                return true;
            }

            adminLoginForm.addEventListener("submit", function (event) {
                if (!validateLogin()) {
                    event.preventDefault(); // Stop form submission
                }
            });
        });
    </script>
</body>
</html>

