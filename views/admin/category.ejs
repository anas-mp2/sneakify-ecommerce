<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sneakify Categories Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="/styles/adminStyles/dashboard.css">
    <style>
        body {
            background-color: #1e1e1e;
            color: #ffffff;
            margin: 0;
        }
        .table {
            color: #ffffff;
            width: 100%;
            margin-bottom: 0;
        }
        .table thead th {
            color: #cccccc;
            text-align: center;
            padding: 15px;
            text-transform: uppercase;
        }
        .table tbody td {
            text-align: center;
            vertical-align: middle;
            padding: 15px;
        }
        .table th:nth-child(1), .table td:nth-child(1) { width: 10%; } /* NO */
        .table th:nth-child(2), .table td:nth-child(2) { width: 20%; } /* BRANDS */
        .table th:nth-child(3), .table td:nth-child(3) { width: 30%; } /* CATEGORY DESCRIPTION */
        .table th:nth-child(4), .table td:nth-child(4) { width: 20%; } /* LAST UPDATED */
        .table th:nth-child(5), .table td:nth-child(5) { width: 20%; } /* ACTIONS */
        .btn-edit, .btn-delete {
            background: none;
            border: none;
            color: #ffffff;
            font-size: 1.2rem;
            margin: 0 5px;
        }
        .btn-edit:hover, .btn-delete:hover {
            color: #007bff;
        }
        .pagination .page-link {
            background-color: #2c2c2c;
            color: #ffffff;
            border: 1px solid #444;
        }
        .pagination .page-item.active .page-link {
            background-color: #6f42c1; /* Purple, as in screenshot */
            border-color: #6f42c1;
        }
        .pagination .page-item.disabled .page-link {
            background-color: #2c2c2c;
            color: #666;
            border: 1px solid #444;
            cursor: not-allowed;
        }
        .input-group input {
            background-color: #2c2c2c !important;
            border: 1px solid #444;
            color: #ffffff;
        }
        .input-group .btn-search {
            background-color: #007bff;
            color: white;
            border: none;
        }
        .input-group .btn-clear {
            background-color: #6c757d;
            color: white;
            border: none;
        }
        .flex-grow-1 {
            padding: 0;
            margin: 0;
        }
        .container-fluid.custom-container {
            padding: 1.5rem 1.5rem 1.5rem 1.5rem;
            margin-right: 0;
        }
        .table-responsive {
            width: 100%;
            margin-right: 0;
            padding-right: 0;
        }
        .d-flex {
            width: 100%;
            margin: 0;
        }
        .pagination {
            margin-right: 0;
        }
        .modal-content {
            background-color: #2c2c2c;
            color: #ffffff;
            border: 1px solid #444;
        }
        .modal-header {
            border-bottom: 1px solid #444;
        }
        .modal-footer {
            border-top: 1px solid #444;
        }
        .modal-title {
            color: #cccccc;
        }
        .btn-cancel {
            background-color: #6c757d;
            color: white;
        }
        .btn-add, .btn-update {
            background-color: #28a745;
            color: white;
            border: none;
        }
        .btn-add-category {
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 20px;
            padding: 5px 15px;
        }
        .modal-body input, .modal-body textarea {
            background-color: #ffffff !important;
            color: #000000;
            border: 1px solid #444;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <%- include('../partials/admin/sidebar') %>

        <!-- Main Content -->
        <div class="flex-grow-1">
            <%- include('../partials/admin/navbar') %>
            
            <div class="container-fluid custom-container">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2>Categories</h2>
                    <button type="button" class="btn btn-add-category" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
                        ADD CATEGORY +
                    </button>
                </div>

                <!-- Search Bar with Clear Button -->
                <form action="/admin/category" method="GET" class="input-group mb-3">
                    <input type="text" 
                           name="search" 
                           class="form-control bg-dark text-white" 
                           placeholder="Search for Categories" 
                           value="<%= searchQuery || '' %>">
                    <button type="submit" class="btn btn-search">Search</button>
                    <button type="button" 
                            class="btn btn-clear" 
                            onclick="window.location.href='/admin/category?page=1'">Clear</button>
                </form>
                
                <!-- Error Message (if any) -->
                <% if (error) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>

                <div class="table-responsive">
                    <table class="table table-dark table-striped align-middle">
                        <thead>
                            <tr>
                                <th>NO</th>
                                <th>BRANDS</th>
                                <th>CATEGORY DESCRIPTION</th>
                                <th>LAST UPDATED</th>
                                <th>ACTIONS</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (categories && categories.length > 0) { %>
                                <% categories.forEach((category, index) => { %>
                                    <tr>
                                        <td><%= (currentPage - 1) * 10 + index + 1 %></td>
                                        <td><%= category.name %></td>
                                        <td><%= category.description %></td>
                                        <td><%= new Date(category.createdAt).toLocaleDateString() %></td>
                                        <td>
                                            <button type="button" class="btn btn-edit" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#editCategoryModal"
                                                data-id="<%= category._id %>"
                                                data-name="<%= category.name %>"
                                                data-description="<%= category.description %>"
                                                data-offer="<%= category.categoryOffer %>">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button type="button" class="btn btn-delete" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteCategoryModal"
                                                data-id="<%= category._id %>"
                                                data-name="<%= category.name %>">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5">No categories found.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

                <!-- Dynamic Pagination -->
                <% if (totalPages > 1) { %>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <span>SHOWING <%= (currentPage - 1) * 10 + 1 %> OF <%= totalCategories %></span>
                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                    <a class="page-link" href="/admin/category?page=<%= currentPage - 1 %>&search=<%= encodeURIComponent(searchQuery) %>" aria-label="Previous">
                                        <span aria-hidden="true">«</span>
                                    </a>
                                </li>
                                <% for (let i = 1; i <= totalPages; i++) { %>
                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                        <a class="page-link" href="/admin/category?page=<%= i %>&search=<%= encodeURIComponent(searchQuery) %>"><%= i %></a>
                                    </li>
                                <% } %>
                                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                    <a class="page-link" href="/admin/category?page=<%= currentPage + 1 %>&search=<%= encodeURIComponent(searchQuery) %>" aria-label="Next">
                                        <span aria-hidden="true">»</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Add Category Modal -->
    <div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCategoryModalLabel">Add Categories</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/admin/add-category" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="categoryName" class="form-label">Category Name:</label>
                            <input type="text" class="form-control" id="categoryName" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="categoryDescription" class="form-label">Description:</label>
                            <input type="text" class="form-control" id="categoryDescription" name="description" required>
                        </div>
                        <div class="mb-3">
                            <label for="categoryOffer" class="form-label">Category Offer (%):</label>
                            <input type="number" class="form-control" id="categoryOffer" name="categoryOffer" min="0" max="100" value="0">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-add">ADD CATEGORY</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Category Modal -->
    <div class="modal fade" id="editCategoryModal" tabindex="-1" aria-labelledby="editCategoryModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editCategoryModalLabel">Edit Categories</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="editCategoryForm" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="editCategoryName" class="form-label">Category Name:</label>
                            <input type="text" class="form-control" id="editCategoryName" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="editCategoryDescription" class="form-label">Description:</label>
                            <input type="text" class="form-control" id="editCategoryDescription" name="description" required>
                        </div>
                        <div class="mb-3">
                            <label for="editCategoryOffer" class="form-label">Category Offer (%):</label>
                            <input type="number" class="form-control" id="editCategoryOffer" name="categoryOffer" min="0" max="100">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-update">UPDATE</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Delete Category Modal -->
    <div class="modal fade" id="deleteCategoryModal" tabindex="-1" aria-labelledby="deleteCategoryModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteCategoryModalLabel">Delete Category</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="deleteCategoryMessage"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteCategoryForm" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Edit Category Modal
        const editCategoryModal = document.getElementById('editCategoryModal');
        editCategoryModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const name = button.getAttribute('data-name');
            const description = button.getAttribute('data-description');
            const offer = button.getAttribute('data-offer');

            const editCategoryName = document.getElementById('editCategoryName');
            const editCategoryDescription = document.getElementById('editCategoryDescription');
            const editCategoryOffer = document.getElementById('editCategoryOffer');
            const editCategoryForm = document.getElementById('editCategoryForm');

            editCategoryName.value = name;
            editCategoryDescription.value = description;
            editCategoryOffer.value = offer || 0;
            editCategoryForm.action = `/admin/edit-category/${id}?page=<%= currentPage %>&search=<%= encodeURIComponent(searchQuery) %>`;
        });

        // Delete Category Modal
        const deleteCategoryModal = document.getElementById('deleteCategoryModal');
        deleteCategoryModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const name = button.getAttribute('data-name');

            const deleteCategoryMessage = document.getElementById('deleteCategoryMessage');
            const deleteCategoryForm = document.getElementById('deleteCategoryForm');

            deleteCategoryMessage.textContent = `Are you sure you want to delete the category "${name}"?`;
            deleteCategoryForm.action = `/admin/delete-category/${id}?page=<%= currentPage %>&search=<%= encodeURIComponent(searchQuery) %>`;
        });
    </script>
</body>
</html>