<div class="d-flex">
    <!-- Sidebar -->
    <%- include("../partials/admin/sidebar") %>

    <!-- Main Content -->
    <div class="container mt-4 text-white flex-grow-1">
        <h2 class="mb-4">Users</h2>
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>USER IMAGE</th>
                    <th>USER NAME</th>
                    <th>EMAIL</th>
                    <th>ADDRESS</th>
                    <th>DATE OF CREATION</th>
                    <th>ACTION</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                    <td><img src="<%= user.image || '/images/default-user.png' %>" alt="User" width="40" class="rounded-circle"></td>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.address %></td>
                    <td><%= user.createdOn ? user.createdOn.toDateString() : "N/A" %></td>

                    <td>
                        <button class="btn <%= user.isBlocked ? 'btn-success' : 'btn-danger' %> block-btn" data-id="<%= user._id %>">
                            <%= user.isBlocked ? "UNBLOCK" : "BLOCK" %>
                        </button>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>

        <!-- Pagination -->
        <nav>
            <ul class="pagination">
                <% if (currentPage > 1) { %>
                    <li class="page-item"><a class="page-link" href="/admin/users?page=<%= currentPage - 1 %>">Prev</a></li>
                <% } %>
                <li class="page-item active"><span class="page-link"><%= currentPage %></span></li>
                <% if (users.length === 5) { %>
                    <li class="page-item"><a class="page-link" href="/admin/users?page=<%= currentPage + 1 %>">Next</a></li>
                <% } %>
            </ul>
        </nav>
    </div>
</div>


<script>
document.querySelectorAll('.block-btn').forEach(button => {
    button.addEventListener('click', async (e) => {
        const userId = e.target.getAttribute('data-id');
        const confirmAction = confirm("Are you sure you want to block/unblock this user?");
        if (!confirmAction) return;

        const response = await fetch('/admin/blockCustomer', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ id: userId })
        });

        const result = await response.json();
        alert(result.message);
        location.reload();
    });
});
</script>
